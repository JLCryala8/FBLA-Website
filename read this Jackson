document.addEventListener("DOMContentLoaded", function () {

    const form = document.getElementById("lostItemForm");

    form.addEventListener("submit", function (event) {
        event.preventDefault(); // STOP page refresh

        const itemName = document.getElementById("text1").value;
        const date = document.getElementById("text2").value;
        const description = document.getElementById("text3").value;
        const category = document.getElementById("text4").value;
        const location = document.getElementById("text5").value;

        console.log("Item Submitted:");
        console.log(itemName, date, description, category, location);

        alert("Item submitted successfully!");

        form.reset();
    });

});

